<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tourist.EmployeeClient.ShipmentsPending"
             Title="За испорака">
    <ListView x:Name="shipmentList" ItemsSource="{Binding ShipmentItems}" RowHeight="100" ItemTapped="shipmentList_ItemTapped">
        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <HorizontalStackLayout>
                        <Label Text="{Binding CustomerName}" FontSize="46" Padding="20,0,0,0"/>
                        <Button Text="Бриши"/>
                        <Button Text="Печати"/>
                    </HorizontalStackLayout>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</ContentPage>
