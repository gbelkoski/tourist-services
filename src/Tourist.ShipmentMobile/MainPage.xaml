<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tourist.ShipmentMobile.MainPage">

    <FlexLayout Direction="Row"
                Margin="0,200,0,0"
                Wrap="Wrap" 
                AlignItems="Center"
                JustifyContent="SpaceEvenly">
        <Button Text="Нова испратница"
                x:Name="btnNew"
                HeightRequest="200"
                WidthRequest="350"
                FontSize="26"
                Clicked="btnNewShipment_Clicked"/>
        <Button Text="За испорака"
                x:Name="btnPending"
                HeightRequest="200"
                WidthRequest="350"
                FontSize="26"
                Clicked="btnPending_Clicked"/>
        <Button Text="Испорачани"
                x:Name="btnDelivered"
                HeightRequest="200"
                WidthRequest="350"
                FontSize="26"
                Clicked="btnDelivered_Clicked"/>
    </FlexLayout>

</ContentPage>
