<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Tourist.ShipmentMobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Tourist.ShipmentMobile"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent
        Title="Евиденција на испорака"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="mainpage" >
        <ShellContent Route="customerpicker"
            Title="customer_picker"
            ContentTemplate="{DataTemplate local:CustomerPickerPage}" >
        </ShellContent>
     </ShellContent>

    <ShellContent Route="shipmentdetails"
                Title="shipment_details"
                ContentTemplate="{DataTemplate local:ShipmentDetailsPage}"/>

     <ShellContent Route="shipmentspending"
                Title="shipment_pending"
                ContentTemplate="{DataTemplate local:ShipmentsPendingPage}"/>

    <ShellContent Route="shipmentsdelivered"
                Title="shipment_delivered"
                ContentTemplate="{DataTemplate local:ShipmentsDeliveredPage}"/>

</Shell>
