<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tourist.ShipmentMobile.AddEditCustomerPage"
             Title="Нов клиент">
    <VerticalStackLayout Spacing="20">
        <Entry Placeholder="ID" x:Name="txtId" IsEnabled="{Binding IsNew}" MaxLength="6" Text="{Binding Id}"/>
        <Entry Placeholder="Име" x:Name="txtName" Text="{Binding Name}"/>
        <Entry Placeholder="Адреса" x:Name="txtAddress" Text="{Binding Address}"/>
        <Button Text="Зачувај" Command="{Binding SaveCustomerCommand}" />
    </VerticalStackLayout>
</ContentPage>
