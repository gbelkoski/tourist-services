<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tourist.ShipmentMobile.AdminMenuPage"
             Title="Администрација">

    <FlexLayout Direction="Row"
                Margin="0,20,0,0"
                Wrap="Wrap" 
                AlignItems="Center"
                JustifyContent="SpaceEvenly">
        <Button Text="Клиенти"
                x:Name="btnManageCustomers"
                HeightRequest="200"
                WidthRequest="350"
                FontSize="26"
                Clicked="btnManageCustomers_Clicked"/>
        <Button Text="Артикли/услуги"
                x:Name="btnManageItems"
                HeightRequest="200"
                WidthRequest="350"
                FontSize="26"
                Clicked="btnManageItems_Clicked"/>
    </FlexLayout>

</ContentPage>
