<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tourist.ShipmentMobile.CustomerPickerPage"
             xmlns:vm="clr-namespace:Tourist.ShipmentMobile.ViewModels"
             Title="Клиенти">
    <ListView ItemsSource="{Binding Customers}" x:Name="lstCustomers" RowHeight="120">
        <ListView.ItemTemplate>
            <DataTemplate>
                <!--For some reason binding the content does not work
                <ViewCell>
                    <Label Text="{Binding Name}"/>
                </ViewCell>-->
                 <TextCell Text="{Binding Name}" Command="{Binding Path = CustomerSelectedCommand, Source={RelativeSource AncestorType={x:Type vm:CustomerPickerViewModel}}}" CommandParameter="{Binding .}"/>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</ContentPage>
