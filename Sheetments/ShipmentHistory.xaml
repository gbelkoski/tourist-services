<UserControl x:Class="Sheetments.ShipmentHistory"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Sheetments"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <DataGrid ItemsSource="{Binding Shippments}" IsReadOnly="True" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Датум" Binding="{Binding DateCreated, StringFormat={}{0:dd/MM/yyyy}}"/>
                <DataGridTextColumn Header="Бр. испратница" Binding="{Binding ShippmentNo}"/>
                <DataGridTextColumn Header="Клиент" Binding="{Binding Customer.Name}"/>
                <DataGridTextColumn Header="Тежина" Binding="{Binding TotalWeight}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
